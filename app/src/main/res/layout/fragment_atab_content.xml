<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding = "20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="식당이름:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines ="1"
                    android:background="#303030"
                    android:inputType = "textShortMessage"
                    android:hint="예) 류니끄"
                    android:textSize="@dimen/medium_text"
                    android:focusableInTouchMode="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="전화번호:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/phone"
                    android:maxLines ="1"
                    android:inputType = "textShortMessage"
                    android:background="#303030"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:layout_height="wrap_content"
                    android:hint="예) 010-9696-5515" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="식당 주소:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:maxLines ="1"
                    android:background="#303030"
                    android:textSize="@dimen/medium_text"
                    android:inputType = "textShortMessage"
                    android:layout_height="wrap_content"
                    android:hint="예) 대전시 어은동 101-10" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="간단 주소:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/simple_address"
                    android:layout_width="wrap_content"
                    android:maxLines ="1"
                    android:background="#303030"
                    android:inputType = "textShortMessage"
                    android:textSize="@dimen/medium_text"
                    android:layout_height="wrap_content"
                    android:hint="예) 가로수길"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="음식종류:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/rest_type"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:maxLines ="1"
                    android:inputType = "textShortMessage"
                    android:background="#303030"
                    android:layout_height="wrap_content"
                    android:hint="예) 양식"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="한줄 설명:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/descrip"
                    android:layout_width="wrap_content"
                    android:background="#303030"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:hint="예) 서래마을에 수퍼푸드를 주재료로 선보이는 브런치 레스토랑"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="운영시간:"
                    android:maxLines ="1"
                    android:inputType = "textShortMessage"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/oper_time"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:layout_height="wrap_content"
                    android:background="#303030"
                    android:hint="예) 12:00 ~ 22:00"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:maxLines ="1"
                    android:inputType = "textShortMessage"
                    android:text="쉬는시간:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/rest_time"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:background="#303030"
                    android:layout_height="wrap_content"
                    android:hint="예) 14:30 ~ 17:00"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="휴일:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/holiday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#303030"
                    android:maxLines ="1"
                    android:textSize="@dimen/medium_text"
                    android:inputType = "textShortMessage"
                    android:hint="예) 월요일"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="인당 가격:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:maxLines ="1"
                    android:background="#303030"
                    android:inputType = "textShortMessage"
                    android:textSize="@dimen/medium_text"
                    android:layout_height="wrap_content"
                    android:hint="예) 1만원 ~ 2만원"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="인당 예약금:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/reserv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines ="1"
                    android:textSize="@dimen/medium_text"
                    android:background="#303030"
                    android:inputType = "textShortMessage"
                    android:hint="예) 10000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/textview_size"
                    android:layout_height="wrap_content"
                    android:text="내 지갑:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/coin"
                    android:textSize="@dimen/medium_text"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>