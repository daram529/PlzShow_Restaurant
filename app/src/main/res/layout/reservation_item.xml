<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/reservation_cardView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/status_color_indicator"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#ffffff">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_reserv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예약자 이름"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/txtView_reserv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017년 1월 1일 0시 0분"/>
            <TextView
                android:id="@+id/txtView_reserv_num_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (0명)"
                android:paddingLeft="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:id="@+id/txtView_reserv_elapsed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0분 전 보냄  /"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/txtView_reserv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미확인"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

